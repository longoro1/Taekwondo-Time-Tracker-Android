<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="User Information"
        android:key="user_info_pref_cat">

            <EditTextPreference
                android:key="access_token_pref"
                android:title="Access Token"
                android:summary="Your access token"/>

        </PreferenceCategory>

    <PreferenceCategory
        android:title="Server Information"
        android:key="server_info_pref_cat">

        <EditTextPreference
            android:key="server_url_pref"
            android:title="Server URL"
            android:summary="The Server URL"
            android:defaultValue="http://taekwondo-time-tracker.herokuapp.com"/>

    </PreferenceCategory>


</PreferenceScreen>